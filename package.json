    "coffeescript": "1.12.7",
    "lodash": "^4.14.2",
    "prop-types": "^15.6.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-refetch": "^2.0.0",
    "react_ujs": "^2.4.3",
    "styled-components": "^3.4.5"
  },
  "devDependencies": {
    "babel-eslint": "~8.2.1",
    "babel-jest": "^22.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint": "^4.16.0",
