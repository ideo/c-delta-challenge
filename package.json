{
  "private": true,
  "engines": {
    "node": "^8.9.1",
    "yarn": "^1.10.1"
  },
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "testURL": "http://localhost",
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/app/javascript"
    ],
    "testPathIgnorePatterns": [
      "/config/webpack/"
    ],
    "setupTestFrameworkScriptFile": "./__js_test_config/setup.js",
    "modulePaths": [
      "__js_test_config"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "moduleDirectories": [
      "node_modules",
      "app/javascript/src",
      "__tests__",
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "dependencies": {
    "@rails/webpacker": "4.0.0-pre.2",
